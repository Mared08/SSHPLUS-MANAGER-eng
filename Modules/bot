ShellBot.regHandleFunction --function fun_del_res --callback_data _delres
ShellBot.regHandleFunction --function fun_lim_res --callback_data _limres
ShellBot.regHandleFunction --function fun_dat_res --callback_data _datres
ShellBot.regHandleFunction --function fun_list_res --callback_data _listres
ShellBot.regHandleFunction --function fun_susp_res --callback _suspendres
unset keyboard4
keyboard4="$(ShellBot.InlineKeyboardMarkup -b 'menu4')"

while :; do
    [[ -e "/etc/SSHPlus/backups/backup.vps" ]] && {
        backup_auto
    }
    #Get updates
    ShellBot.getUpdates --limit 100 --offset $(ShellBot.OffsetNext) --timeout 35
    #Lists the index of updates
    for id in $(ShellBot.ListUpdates); do
        #Thread start
        (
            ShellBot.watchHandle --callback_data ${callback_query_data[$id]}
            # Private requests only.
            [[ ${message_chat_type[$id]} != 'private' ]] && continue
            CAD_ARQ=/tmp/cad.${message_from_id[$id]}
            if [[ ${message_entities_type[$id]} == bot_command ]]; then
                #Checks whether the message sent by the user is a valid command.
                case ${message_text[$id]} in
                *)
                    :
                    #command
                    command=(${message_text[$id]})
                    [[ "${command[0]}" = "/start" ]] && msg_bem_vindo
                    [[ "${command[0]}" = "/menu" ]] && fun_menu
                    [[ "${command[0]}" = "/info" ]] && infouserbot
                    [[ "${command[0]}" = "/help" || "${comando[0]}" = "/help" ]] && fun_help
                    [[ "${command[0]}" = "/bot" || "${comando[0]}" = "/about" ]] && aboutme
                    ;;
                esac
            fi
            if [[ ${message_reply_to_message_message_id[$id]} ]]; then
                # Analyzes the response interface.
                case ${message_reply_to_message_text[$id]} in
                'üë§ CREATE USER üë§\n\nUsername:')
                    check_access
                    [[ "$_erro" == '1' ]] && break
                    [[ "$(awk -F : '$3 >= 1000 { print $1 }' /etc/passwd | grep -w ${message_text[$id]} | wc -l)" != '0' ]] && {
                        ShellBot.sendMessage --chat_id ${message_chat_id[$id]} \
                            --text "$(echo -e "‚ùå Error! INVALID USER ‚ùå\n\n‚ö†Ô∏è Enter Another Name..")" \
                            --parse_mode html
                        >$CAD_ARQ
                        break
                    }
                    [ "${message_text[$id]}" == 'root' ] && {
                        ShellBot.sendMessage --chat_id ${message_chat_id[$id]} \
                            --text "$(echo -e "‚ùå ERROR! INVALID USER ‚ùå\n\n‚ö†Ô∏è Enter Another Name..")" \
                            --parse_mode html
                        >$CAD_ARQ
                        break
                    }
                    sizemin=$(echo -e ${#message_text[$id]})
                    [[ "$sizemin" -lt '4' ]] && {
                        ShellBot.sendMessage --chat_id ${message_chat_id[$id]} \
                            --text "$(echo -e "‚ùå Erro !\n\nUse at least 4 characters\n[EX: test]")" \
                            --parse_mode html

                        >$CAD_ARQ
                        break
                    }
                    sizemax=$(echo -e ${#message_text[$id]})
                    [[ "$sizemax" -gt '10' ]] && {
                        ShellBot.sendMessage --chat_id ${message_chat_id[$id]} \
                            --text "$(echo -e "‚ùå Error !\n\ nUse a maximum of 8 characters\n[EX: crazy]")" \
                            --parse_mode html
                        >$CAD_ARQ
                        break
                    }
                    echo "Name: ${message_text[$id]}" >$CAD_ARQ
                    ShellBot.sendMessage --chat_id ${message_from_id[$id]} \
                        --text 'Senha:' \
                        --reply_markup "$(ShellBot.ForceReply)" # Force the response.
                    ;;
                'Senha:')
                    sizepass=$(echo -e ${#message_text[$id]})
                    check_access
                    [[ "$_erro" == '1' ]] && break
                    [[ "$sizepass" -lt '4' ]] && {
                        ShellBot.sendMessage --chat_id ${message_chat_id[$id]} \
                            --text "$(echo -e "‚ùå Error !\n\nUse at least 4 characters\n[EX: 1234]")" \
                            --parse_mode html
                        >$CAD_ARQ
                        break
                    }
                    echo "Password: ${message_text[$id]}" >>$CAD_ARQ
                    # Next field.
                    ShellBot.sendMessage --chat_id ${message_from_id[$id]} \
                        --text 'Limit:' \
                        --reply_markup "$(ShellBot.ForceReply)"
                    ;;
                'Limit:')
                    check_access
                    [[ "$_erro" == '1' ]] && break
                    [[ ${message_text[$id]} != ?(+|-)+([0-9]) ]] && {
                        ShellBot.sendMessage --chat_id ${message_chat_id[$id]} \
                            --text "$(echo -e "‚ùå Error !\n\nUse only numbers [EX: 1]")" \
                            --parse_mode html
                        >$CAD_ARQ
                        break
                    }
                    [[ "${message_from_id[$id]}" != "$id_admin" ]] && {
                        _limTotal=$(grep -w "${message_from_username}" $active | awk '{print $4}')
                        fun_verif_limit_rev ${message_from_username}
                        _limsomarev2=$(echo "$_result + ${message_text[$id]}" | bc)
                        [[ "$_limsomarev2" -gt "$_limTotal" ]] && {
                            _restant1=$(($_limTotal - $_result))
                            ShellBot.sendMessage --chat_id ${message_chat_id[$id]} \
                                --text "$(echo -e "‚ùå You don't have enough limit \n\nLimit available: $_restant1 ")" \
                                --parse_mode html
                            >$CAD_ARQ
                            break
                        }
                    }
                    echo "Limit: ${message_text[$id]}" >>$CAD_ARQ
                    # Next Field.
                    ShellBot.sendMessage --chat_id ${message_from_id[$id]} \
                        --text 'Validity in days: ' \
                        --reply_markup "$(ShellBot.ForceReply)"
                    ;;

                'Validity in days:')
                    check_access
                    [[ "$_erro" == '1' ]] && break
                    [[ ${message_text[$id]} != ?(+|-)+([0-9]) ]] && {
                        ShellBot.sendMessage --chat_id ${message_chat_id[$id]} \
                            --text "$(echo -e "‚ùå Error !\n\nUse only numbers [EX: 30]")" \
                            --parse_mode html
                        >$CAD_ARQ
                        break
                    }
                    info_data=$(date '+%d/%m/%C%y' -d " +${message_text[$id]} days")
                    echo "Validity: $info_date" >>$CAD_ARQ
                    create_user $CAD_ARQ
                    [[ "(grep -w ${message_text[$id]} /etc/passwd)" = '0' ]] && {
                        ShellBot.sendMessage --chat_id ${message_chat_id[$id]} \
                            --text "$(echo -e ‚ùå Error creating user !)" \
                            --parse_mode html
                        >$CAD_ARQ
                        break
                    }
                    [[ "$(ls /etc/bot/arquivos | wc -l)" != '0' ]] && {
                        ShellBot.sendMessage --chat_id ${message_from_id[$id]} \
                            --text 'üì• AVAILABLE FILES üì•\n\nDo you want to download? Yes or no?:' \
                            --reply_markup "$(ShellBot.ForceReply)"
                    } || {
                        ShellBot.sendMessage --chat_id ${message_from_id[$id]} \
                            --text "<b>‚úÖ SUCCESSFULLY CREATED ‚úÖ</b>\n\nIP: $(cat /etc/IP)\nUSER: <code>$(awk -F " " '/Name/ {print $2}' $CAD_ARQ)</code>\nPASSWORD: <code>$(awk -F " " '/Password/ {print $2}' $CAD_ARQ)</code>\nLIMIT: $(awk -F " " '/Limit/ {print $2}' $CAD_ARQ)\nEXPIRES IN: $(awk -F " " '/Validity/ {print $2}' $CAD_ARQ)" \
                            --parse_mode html
                        break
                    }
                    ;;
                'üì• AVAILABLE FILES üì•\n\nDo you want to download? Yes or no?:')
                    check_access
                    [[ "$_erro" == '1' ]] && break
                    [[ ${message_text[$id]} != ?(+|-)+([A-Za-z]) ]] && {
                        ShellBot.sendMessage --chat_id ${message_chat_id[$id]} \
                            --text "$(echo -e "‚ùå Invalid Option ‚ùå\n\n‚ö†Ô∏è Use only letters [EX: yes or no]")" \
                            --parse_mode html
                        ShellBot.sendMessage --chat_id ${message_from_id[$id]} \
                            --text "<b>‚úÖ SUCCESSFULLY CREATED ‚úÖ</b>\n\nIP: $(cat /etc/IP)\nUSER: <code>$(awk -F " " '/Name/ {print $2}' $CAD_ARQ)</code>\nPASSWORD: <code>$(awk -F " " '/Password/ {print $2}' $CAD_ARQ)</code>\nLIMIT: $(awk -F " " '/Limit/ {print $2}' $CAD_ARQ)\nEXPIRES IN: $(awk -F " " '/Validity/ {print $2}' $CAD_ARQ)" \
                            --parse_mode html
                        break
                    }
                    [[ "${message_text[$id]}" = @(Sim|sim|SIM) ]] && {
                        msg_cli="‚â†‚â†‚â†‚â†‚â†‚â†‚â†‚â†‚â†‚â†‚â†‚â†‚â†‚â†‚â†‚â†‚â†‚â†‚â†‚â†‚â†‚â†‚â†‚â†‚â†‚â†\n"
                        msg_cli+="<b>PRE-CONFIGURED FILES </b>‚ùó\n"
                        msg_cli+="‚â†‚â†‚â†‚â†‚â†‚â†‚â†‚â†‚â†‚â†‚â†‚â†‚â†‚â†‚â†‚â†‚â†‚â†‚â†‚â†‚â†‚â†‚â†‚â†‚â†‚â†\n\n"
                        for _file in $(ls /etc/bot/files); do
                            i=$(($i + 1))
                            msg_cli+="<b>[$i]</b> - $_file\n"
                        done
                        ShellBot.sendMessage --chat_id ${message_chat_id[$id]} \
                            --text "$(echo -e "$msg_cli")" \
                            --parse_mode html
                        ShellBot.sendMessage --chat_id ${message_from_id[$id]} \
                            --text 'Enter the File Number:' \
                            --reply_markup "$(ShellBot.ForceReply)"
                    } || {
                        ShellBot.sendMessage --chat_id ${message_from_id[$id]} \
                            --text "<b>‚úÖ SUCCESSFULLY CREATED ‚úÖ</b>\n\nIP: $(cat /etc/IP)\nUSER: <code>$(awk -F " " '/Name/ {print $2}' $CAD_ARQ)</code>\nPASSWORD: <code>$(awk -F " " '/Password/ {print $2}' $CAD_ARQ)</code>\nLIMIT: $(awk -F " " '/Limit/ {print $2}' $CAD_ARQ)\nEXPIRES IN: $(awk -F " " '/Validity/ {print $2}' $CAD_ARQ)" \
                            --parse_mode html
                    }
                    ;;
                'Enter the File Number:')
                    check_access
                    [[ "$_erro" == '1' ]] && break
                    [[ ${message_text[$id]} != ?(+|-)+([0-9]) ]] && {
                        ShellBot.sendMessage --chat_id ${message_chat_id[$id]} \
                            --text "$(echo -e "‚ùå Invalid Option ‚ùå \n\n‚ö†Ô∏è Use only numbers [EX: 1]")" \
                            --parse_mode html
                        ShellBot.sendMessage --chat_id ${message_from_id[$id]} \
                            --text "<b>‚úÖ SUCCESSFULLY CREATED ‚úÖ</b>\n\nIP: $(cat /etc/IP)\nUSER: <code>$(awk -F " " '/Name/ {print $2}' $CAD_ARQ)</code>\nPASSWORD: <code>$(awk -F " " '/Password/ {print $2}' $CAD_ARQ)</code>\nLIMIT: $(awk -F " " '/Limit/ {print $2}' $CAD_ARQ)\nEXPIRES IN: $(awk -F " " '/Validity/ {print $2}' $CAD_ARQ)" \
                            --parse_mode html
                        >$CAD_ARQ
                        break
                    }
                    fun_download ${message_text[$id]} $CAD_ARQ
                    # Clears the temporary file.
                    >$CAD_ARQ
                    break
                    ;;
                'üóë REMOVE USER üóë\n\nUsername:')
                    check_access
                    [[ "$_erro" == '1' ]] && break
                    fun_del_user ${message_text[$id]}
                    [[ "$_erro" == '1' ]] && break
                    ShellBot.sendMessage --chat_id ${message_from_id[$id]} \
                        --text "‚úÖ *Successfully removed.* üöÆ" \
                        --parse_mode markdown
                    ;;
                'üîê Change Password üîê\n\nUsername:')
                    check_access
                    [[ "$_erro" == '1' ]] && break
                    fun_verif_user ${message_text[$id]}
                    echo "$_erro"
                    [[ "$_erro" == '1' ]] && break
                    echo "${message_text[$id]}" >/tmp/name-s
                    ShellBot.sendMessage --chat_id ${message_from_id[$id]} \
                        --text 'New password:' \
                        --reply_markup "$(ShellBot.ForceReply)"
                    ;;
                'New password:')
                    sizepass=$(echo -e ${#message_text[$id]})
                    check_access
                    [[ "$_erro" == '1' ]] && break
                    [[ "$sizepass" -lt '4' ]] && {
                        ShellBot.sendMessage --chat_id ${message_chat_id[$id]} \
                            --text "$(echo -e "‚ùå Error !\n\n‚ö†Ô∏è Use a minimum of 4 characters [EX: 1234]")" \
                            --parse_mode html
                        break
                    }
                    change_user_password $(cat /tmp/name-s) ${message_text[$id]}
                    [[ "$_erro" == '1' ]] && break
                    ShellBot.sendMessage --chat_id ${message_from_id[$id]} \
                        --text "$(echo -e "=√ó=√ó=√ó=√ó=√ó=√ó=√ó=√ó=√ó=√ó=√ó\n<b>‚úÖ PASSWORD CHANGED !</b> !\n=√ó=√ó=√ó=√ó=√ó=√ó=√ó=√ó=√ó=√ó=√ó\n\n<b>User:</b> $(cat /tmp/name-s)\n<b>New password:</b> ${message_text[$id]}")" \
                        --parse_mode html
                    rm /tmp/name-s >/dev/null 2>&1
                    ;;
                'üë• Change Limit üë•\n\nUsername:')
                    check_access
                    [[ "$_erro" == '1' ]] && break
                    echo $_erro second
                    fun_verif_user ${message_text[$id]}
                    echo "$_erro"
                    [[ "$_erro" == '1' ]] && break
                    echo "${message_text[$id]}" >/tmp/name-l
                    ShellBot.sendMessage --chat_id ${message_from_id[$id]} \
                        --text 'New limit:' \
                        --reply_markup "$(ShellBot.ForceReply)"
                    ;;
                'New limit:')
                    check_access
                    [[ "$_erro" == '1' ]] && break
                    [[ ${message_text[$id]} != ?(+|-)+([0-9]) ]] && {
                        ShellBot.sendMessage --chat_id ${message_chat_id[$id]} \
                            --text "$(echo -e "‚ùå Error ! \n\n‚ö†Ô∏è Use only numbers [EX: 1]")" \
                            --parse_mode html
                        break
                    }
                    change_limit_user $(cat /tmp/name-l) ${message_text[$id]}
                    [[ "$_erro" == '1' ]] && break
                    ShellBot.sendMessage --chat_id ${message_from_id[$id]} \
                        --text "$(echo -e "=√ó=√ó=√ó=√ó=√ó=√ó=√ó=√ó=√ó=√ó=√ó\n<b>‚úÖ CHANGED LIMIT !</b> !\n=√ó=√ó=√ó=√ó=√ó=√ó=√ó=√ó=√ó=√ó=√ó\n\n<b>User:</b> $(cat /tmp/name-l)\n<b>New Limit:</b> ${message_text[$id]}")" \
                        --parse_mode html
                    rm /tmp/name-l >/dev/null 2>&1
                    ;;
                '‚è≥ Change Date ‚è≥\n\nUsername:')
                    check_access
                    [[ "$_erro" == '1' ]] && break
                    fun_verif_user ${message_text[$id]}
                    [[ "$_erro" == '1' ]] && break
                    echo "${message_text[$id]}" >/tmp/name-d
                    ShellBot.sendMessage --chat_id ${message_from_id[$id]} \
                        --text 'inform the days or date:' \
                        --reply_markup "$(ShellBot.ForceReply)"
                    ;;
                'inform the days or date:')
                    check_access
                    [[ "$_erro" == '1' ]] && break
                    [[ ${message_text[$id]} != ?(+|-)+([0-9/]) ]] && {
                        ShellBot.sendMessage --chat_id ${message_chat_id[$id]} \
                            --text "$(echo -e "‚ùå Error! follow the example\n\nDays format [EX: 30]\nDate format [EX: 30/12/2019]")" \
                            --parse_mode html
                        break
                    }
                    alterar_data_user $(cat /tmp/name-d) ${message_text[$id]}
                    [[ "$_erro" == '1' ]] && break
                    ShellBot.sendMessage --chat_id ${message_from_id[$id]} \
                        --text "$(echo -e "=√ó=√ó=√ó=√ó=√ó=√ó=√ó=√ó=√ó=√ó=√ó\n<b>‚úÖ CHANGED DATE !</b> !\n=√ó=√ó=√ó=√ó=√ó=√ó=√ó=√ó=√ó=√ó=√ó\n\n<b>User:</b> $(cat /tmp/name-d)\n<b>New Date:</b> $udata")" \
                        --parse_mode html
                    rm /tmp/name-d >/dev/null 2>&1
                    ;;
                '[1] - ADD FILE\n[2] - DELETE FILE\n\nEnter the option [1-2]:')
                    [[ ${message_text[$id]} != ?(+|-)+([0-9]) ]] && {
                        ShellBot.sendMessage --chat_id ${message_chat_id[$id]} \
                            --text "$(echo -e "‚ùå Error ! \n\n‚ö†Ô∏è use only numbers [EX: 1 or 2]")" \
                            --parse_mode html
                        break
                    }
                    if [[ "${message_text[$id]}" = '1' ]]; then
                        ShellBot.sendMessage --chat_id ${message_from_id[$id]} \
                            --text "üì§ HOST FILES üì§\n\nSend me the file:" \
                            --reply_markup "$(ShellBot.ForceReply)"
                    elif [[ "${message_text[$id]}" = '2' ]]; then
                        [[ $(ls /etc/bot/files | wc -l) != '0' ]] && {
                            msg_cli1="‚â†‚â†‚â†‚â†‚â†‚â†‚â†‚â†‚â†‚â†‚â†‚â†‚â†‚â†‚â†‚â†‚â†‚â†‚â†‚â†‚â†‚â†‚â†‚â†‚â†‚â†\n"
                            msg_cli1+="üöÄ<b> HOSTED ARCHIVES </b>\n"
                            msg_cli1+="‚â†‚â†‚â†‚â†‚â†‚â†‚â†‚â†‚â†‚â†‚â†‚â†‚â†‚â†‚â†‚â†‚â†‚â†‚â†‚â†‚â†‚â†‚â†‚â†‚â†‚â†\n\n"
                            for _file in $(ls /etc/bot/files); do
                                i=$(($i + 1))
                                msg_cli1+="<b>[$i]</b> - $_file\n"
                            done
                            ShellBot.sendMessage --chat_id ${message_chat_id[$id]} \
                                --text "$(echo -e "$msg_cli1")" \
                                --parse_mode html
                            ShellBot.sendMessage --chat_id ${message_from_id[$id]} \
                                --text "üóëDelete File \nEnter File Number:" \
                                --reply_markup "$(ShellBot.ForceReply)"
                        } || {
                            ShellBot.sendMessage --chat_id ${message_chat_id[$id]} \
                                --text "$(echo -e "There are no files available")" \
                                --parse_mode html
                            break
                        }
                    else
                        ShellBot.sendMessage --chat_id ${message_chat_id[$id]} \
                            --text "$(echo -e "‚ùå Invalid Option")" \
                            --parse_mode html
                        break
                    fi
                    ;;
                'üóëDelete File \nEnter File Number:')
                    [[ "${message_from_id[$id]}" != "$id_admin" ]] && break
                    Opc1=${message_text[$id]}
                    echo $Opc1
                    [[ ${message_text[$id]} != ?(+|-)+([0-9]) ]] && {
                        ShellBot.sendMessage --chat_id ${message_chat_id[$id]} \
                            --text "$(echo -e "‚ùå Error deleting file ! \n\n‚ö†Ô∏è Use only numbers [EX: 1]")" \
                            --parse_mode html
                        break
                    } || {
                        echo "option $Opt1"
                        _DirArq=$(ls /etc/bot/files)
                        i=0
                        unset _Pass
                        while read _Arq; do
                            i=$(expr $i + 1)
                            _oP=$i
                            [[ $i == [1-9] ]] && i=0$i && oP+=" 0$i"
                            echo -e "[$i] - $_Arq"
                            _Pass+="\n${_oP}:${_Arq}"
                        done <<<"${_DirArq}"
                        _file=$(echo -e "${_Pass}" | grep -E "\b$Opc1\b" | cut -d: -f2)
                        [[ -e /etc/bot/files/$_file ]] && {
                            rm /etc/bot/files/$_file
                            ShellBot.sendMessage --chat_id ${message_from_id[$id]} \
                                --text "‚úÖ *Successfully deleted* ‚úÖ" \
                                --parse_mode markdown
                            break
                        } || {
                            ShellBot.sendMessage --chat_id ${message_from_id[$id]} \
                                --text "$(echo -e "‚ùå Invalid Option")"
                            break
                        }
                    }
                    ;;
                'üì§ HOST FILES üì§\n\nSend me the file:')
                    if [ "${update_id[$id]}" ]; then
                        # Monitors file upload
                        [[ ${message_document_file_id[$id]} ]] && file_id=${message_document_file_id[$id]} && download_file=1
                        # Checks whether the download is enabled..
                        [[ $download_file -eq 1 ]] && {
                            file_id=($file_id)
                            ShellBot.getFile --file_id "${file_id[0]}"
                            ShellBot.downloadFile --file_path ${return[file_path]} --dir "/tmp/file" && {
                                msg='*‚úÖ Successfully hosted file.*\n\n'
                                msg+="*üì§ Contact Information*\n\n"
                                msg+="*Name*: ${message_document_file_name}\n"
                                msg+="*More information*: /etc/bot/files"
                                ShellBot.sendMessage --chat_id ${message_chat_id[$id]} \
                                    --text "$(echo -e "$msg")" \
                                    --parse_mode markdown
                                mv /tmp/file/$(ls -1rt /tmp/file | tail -n1) /etc/bot/files/${message_document_file_name}
                                break
                            }
                        } || {
                            ShellBot.sendMessage --chat_id ${message_chat_id[$id]} \
                                --text "$(echo -e "‚ùå Error receiving file ‚ùå")" \
                                --parse_mode markdown
                            break
                        }
                    fi
                    ;;
                    # RESALE MANAGEMENT FUNCTIONS
                    #
                    # Add, remove, limit, date, suspension, report
                    #
                'üë• ADD RESELLER üë•\n\nEnter the name:')
                    check_access
                    [[ "$_erro" == '1' ]] && break
                    echo "Name: ${message_text[$id]}" >$CAD_ARQ
                    ShellBot.sendMessage --chat_id ${message_from_id[$id]} \
                        --text 'Inform his user [Ex: @crazy_vpn]:' \
                        --reply_markup "$(ShellBot.ForceReply)"
                    ;;
                'Inform his user [Ex: @crazy_vpn]:')
                    check_access
                    [[ "$_erro" == '1' ]] && break
                    _VAR1=$(echo -e ${message_text[$id]} | awk -F '@' {'print $2'})
                    [[ -z $_VAR1 ]] && {
                        ShellBot.sendMessage --chat_id ${message_chat_id[$id]} \
                            --text "$(echo -e "‚ùå Error \n\n‚ö†Ô∏è Inform the user [EX: @crazy_vpn]")" \
                            --parse_mode html
                        break
                    }
                    [[ -d /etc/bot/revenda/$_VAR1 ]] && {
                        ShellBot.sendMessage --chat_id ${message_chat_id[$id]} \
                            --text "$(echo -e "‚ùå The Dealer ${message_text[$id]} exist")" \
                            --parse_mode html
                        break
                    }
                    echo "User: ${message_text[$id]}" >>$CAD_ARQ
                    ShellBot.sendMessage --chat_id ${message_from_id[$id]} \
                        --text 'How many SSH can he create:' \
                        --reply_markup "$(ShellBot.ForceReply)"
                    ;;
                'How many SSH can he create:')
                    check_access
                    [[ "$_erro" == '1' ]] && break
                    [[ ${message_text[$id]} != ?(+|-)+([0-9]) ]] && {
                        ShellBot.sendMessage --chat_id ${message_chat_id[$id]} \
                            --text "$(echo -e "‚ùå Error ! \n\n‚ö†Ô∏è Use only numbers [EX: 10]")" \
                            --parse_mode html
                        break
                    }
                    [[ "${message_from_id[$id]}" != "$id_admin" ]] && {
                        _limTotal=$(grep -w "${message_from_username}" $active | awk '{print $4}')
                        fun_verif_limit_rev ${message_from_username}
                        _limsomarev=$(echo "$_result + ${message_text[$id]}" | bc)
                        [[ "$_limsomares" -gt "$_limTotal" ]] && {
                            _restant1=$(($_limTotal - $_result))
                            ShellBot.sendMessage --chat_id ${message_chat_id[$id]} \
                                --text "$(echo -e "‚ùå You don't have enough limit \n\nLimit available: $_restant1 ")" \
                                --parse_mode html
                            break
                        }
                    }
                    echo "Limite: ${message_text[$id]}" >>$CAD_ARQ
                    ShellBot.sendMessage --chat_id ${message_from_id[$id]} \
                        --text 'How many days of access:' \
                        --reply_markup "$(ShellBot.ForceReply)"
                    ;;
                'How many days of access:')
                    check_access
                    [[ "$_erro" == '1' ]] && break
                    echo "Validity: ${message_text[$id]}" >>$CAD_ARQ
                    _clientres=$(cat $CAD_ARQ)
                    create_res $CAD_ARQ
                    ShellBot.sendMessage --chat_id ${message_from_id[$id]} \
                        --text "‚úÖ Successfully created. ‚úÖ\n\n$(<$CAD_ARQ)\n\nBOT: @${message_reply_to_message_from_username}" \
                        --parse_mode html
                    ;;
                    # REMOVE DEALER
                'üóë REMOVE DEALER üóë\n\nInform his user [Ex: @crazy_vpn]:')
                    echo -e "${message_text[$id]}" >$CAD_ARQ
                    _Var=$(sed -n '1 p' $CAD_ARQ | awk -F '@' {'print $2'})
                    [[ -z $_Var ]] && {
                        ShellBot.sendMessage --chat_id ${message_chat_id[$id]} \
                            --text "$(echo -e "‚ùå Invalid user")" \
                            --parse_mode html
                        break
                    }
                    del_rev $_Var
                    break
                    ;;
                    # CHANGE LIMIT
                '‚ôæ CHANGE RESALE LIMIT ‚ôæ\n\nInform his user [Ex: @crazy_vpn]:')
                    check_access
                    [[ "$_erro" == '1' ]] && break
                    echo -e "Dealer: ${message_text[$id]}" >$CAD_ARQ
                    _Var1=$(sed -n '1 p' $CAD_ARQ | awk -F '@' {'print $2'})
                    [[ -z $_Var1 ]] && {
                        ShellBot.sendMessage --chat_id ${message_chat_id[$id]} \
                            --text "$(echo -e "‚ùå Invalid Name !")" \
                            --parse_mode html
                        break
                    }
                    [[ "${message_from_id[$id]}" == "$id_admin" ]] && {
                        [[ $(grep -wc $_Var1 $active) != '0' ]] && {
                            ShellBot.sendMessage --chat_id ${message_from_id[$id]} \
                                --text 'Enter the SSH Limit:' \
                                --reply_markup "$(ShellBot.ForceReply)"
                        } || {
                            ShellBot.sendMessage --chat_id ${message_chat_id[$id]} \
                                --text "$(echo -e "‚ùå Dealer ${message_text[$id]} not exist")" \
                                --parse_mode html
                            break
                        }
                    }
                    [[ $(grep -w ${message_from_username} $active | awk '{print $NF}') == 'resale' ]] && {
                        [[ "$(grep -wc "$_Var1" /etc/bot/resale/${message_from_username}/${message_from_username})" != '0' ]] && {
                            ShellBot.sendMessage --chat_id ${message_from_id[$id]} \
                                --text 'Enter the SSH Limit:' \
                                --reply_markup "$(ShellBot.ForceReply)"
                        } || {
                            ShellBot.sendMessage --chat_id ${message_chat_id[$id]} \
                                --text "$(echo -e "‚ùå Sub-reseller does not exist")" \
                                --parse_mode html
                            break
                        }
                    }
                    ;;
                'Enter the SSH Limit:')
                    check_access
                    [[ "$_erro" == '1' ]] && break
                    [[ ${message_text[$id]} != ?(+|-)+([0-9]) ]] && {
                        ShellBot.sendMessage --chat_id ${message_chat_id[$id]} \
                            --text "$(echo -e "‚ùå Error ! \n\nUse only numbers [EX: 1]")" \
                            --parse_mode html
                        break
                    }
                    [[ "${message_from_id[$id]}" != "$id_admin" ]] && {
                        _limTotal=$(grep -w "${message_from_username}" $active | awk '{print $4}')
                        fun_verif_limit_rev ${message_from_username}
                        _limsomares=$(echo "$_result + ${message_text[$id]}" | bc)

                        [[ $(grep -wc 'SUBRESALE' /etc/bot/resale/${message_from_username}/${message_from_username}) != '0' ]] && {
                            _limsomares2=$(echo "$(grep -w 'SUBRESALE' /etc/bot/resale/${message_from_username}/${message_from_username} | awk {'print $4'} | paste -s -d + | bc)" + "${message_text[$id]}" | bc)
                        } || {
                            _limsomares2='0'
                        }
                        [[ "$_limsomares2" -ge "$_limTotal" ]] && {
                            echo $_limsomares2
                            ShellBot.sendMessage --chat_id ${message_chat_id[$id]} \
                                --text "$(echo -e "‚ùå You don't have enough limit")" \
                                --parse_mode html
                            break
                        }
                        [[ "$_limsomares" -gt "$_limTotal" ]] && {
                            [[ "$_limTotal" == "$(($_limTotal - $_result))" ]] && _restant1='0' || _restant1=$(($_limTotal - $_result))
                            ShellBot.sendMessage --chat_id ${message_chat_id[$id]} \
                                --text "$(echo -e "‚ùå You don't have enough limit \n\nLimit remaining: $_restant1 ")" \
                                --parse_mode html
                            break
                        }
                    }
                    echo -e "Limit: ${message_text[$id]}" >>$CAD_ARQ
                    lim_rev $CAD_ARQ
                    ShellBot.sendMessage --chat_id ${message_from_id[$id]} \
                        --text "$(echo -e "=√ó=√ó=√ó=√ó=√ó=√ó=√ó=√ó=√ó=√ó=√ó\n<b>‚úÖ RESALE LIMIT CHANGED !</b> !\n=√ó=√ó=√ó=√ó=√ó=√ó=√ó=√ó=√ó=√ó=√ó\n\n$(<$CAD_ARQ)")" \
                        --parse_mode html
                    # CHANGE DATE
                    ;;
                'üìÜ CHANGE RESALE DATE üìÜ\n\nInform his user [Ex: @crazy_vpn]:')
                    check_acCess
                    [[ "$_erro" == '1' ]] && break
                    _VAR1=$(echo -e ${message_text[$id]} | awk -F '@' {'print $2'})
                    [[ -z $_VAR1 ]] && {
                        ShellBot.sendMessage --chat_id ${message_chat_id[$id]} \
                            --text "$(echo -e "Dealer ${message_text[$id]} not exist")" \
                            --parse_mode html
                        break
                    }
                    [[ "${message_from_id[$id]}" == "$id_admin" ]] && {
                        [[ $(grep -wc $_VAR1 $active) != '0' ]] && {
                            echo -e "Dealer: ${message_text[$id]}" >$CAD_ARQ
                            ShellBot.sendMessage --chat_id ${message_from_id[$id]} \
                                --text 'Access days [Ex: 30]:' \
                                --reply_markup "$(ShellBot.ForceReply)"
                        } || {
                            ShellBot.sendMessage --chat_id ${message_chat_id[$id]} \
                                --text "$(echo -e "‚ùå The Dealer ${message_text[$id]} not exist")" \
                                --parse_mode html
                            break
                        }
                    } || {
                        [[ $(grep -w ${message_from_username} $active | awk '{print $NF}') == 'resale' ]] && {
                            [[ "$(grep -wc "$_VAR1" /etc/bot/resale/${message_from_username}/${message_from_username})" != '0' ]] && {
                                echo -e "Resale: ${message_text[$id]}" >$CAD_ARQ
                                ShellBot.sendMessage --chat_id ${message_from_id[$id]} \
                                    --text 'Access days [Ex: 30]:' \
                                    --reply_markup "$(ShellBot.ForceReply)"
                            } || {
                                ShellBot.sendMessage --chat_id ${message_chat_id[$id]} \
                                    --text "$(echo -e "‚ùå The Sub-Dealer ${message_text[$id]} not exist")" \
                                    --parse_mode html
                                break
                            }
                        }
                    }
                    ;;
                'Access days [Ex: 30]:')
                    check_access
                    [[ "$_erro" == '1' ]] && break
                    [[ ${message_text[$id]} != ?(+|-)+([0-9]) ]] && {
                        ShellBot.sendMessage --chat_id ${message_chat_id[$id]} \
                            --text "$(echo -e "‚ùå Error ! \n\nUse only numbers [EX: 30]")" \
                            --parse_mode html
                        break
                    }
                    echo -e "Date: ${message_text[$id]}" >>$CAD_ARQ
                    dat_rev $CAD_ARQ
                    [[ "$_erro" == '1' ]] && break
                    ShellBot.sendMessage --chat_id ${message_from_id[$id]} \
                        --text "$(echo -e "=√ó=√ó=√ó=√ó=√ó=√ó=√ó=√ó=√ó=√ó=√ó\n<b>‚úÖ CHANGED RESALE DATE !</b> !\n=√ó=√ó=√ó=√ó=√ó=√ó=√ó=√ó=√ó=√ó=√ó\n\n$(<$CAD_ARQ)")" \
                        --parse_mode html
                    ;;
                    # SUSPEND RESELLER
                'üîí SUSPEND RESELLER üîí\n\nInform his user [Ex: @crazy_vpn]:')
                    _VAR1=$(echo -e ${message_text[$id]} | awk -F '@' {'print $2'})
                    [[ -z $_VAR1 ]] && {
                        ShellBot.sendMessage --chat_id ${message_chat_id[$id]} \
                            --text "$(echo -e "‚ùå Dealer ${message_text[$id]} not exist")" \
                            --parse_mode html
                        break
                    }
                    susp_rev $_VAR1
                    break
                    ;;
                'üë§ CREATE TEST üë§\n\nHow many hours should last EX: 1:')
                    check_access
                    echo $_erro
                    [[ "$_erro" == '1' ]] && break
                    [[ ${message_text[$id]} != ?(+|-)+([0-9]) ]] && {
                        ShellBot.sendMessage --chat_id ${message_chat_id[$id]} \
                            --text "$(echo -e "‚ùå Error ! \n\nUse only numbers [EX: 1]")" \
                            --parse_mode html
                        >$CAD_ARQ
                        break
                    }
                    [[ "${message_from_id[$id]}" != "$id_admin" ]] && {
                        _limTotal=$(grep -w "${message_from_username}" $active | awk '{print $4}')
                        fun_verif_limit_res ${message_from_username}
                        _limsomares2=$(echo "$_result + 1" | bc)
                        [[ "$_limsomares2" -gt "$_limTotal" ]] && {
                            ShellBot.sendMessage --chat_id ${message_chat_id[$id]} \
                                --text "$(echo -e "‚ùå You don't have enough limit")" \
                                --parse_mode html
                            >$CAD_ARQ
                            break
                        }
                    }
                    fun_test ${message_text[$id]}
                    ;;
                esac
            fi
        ) &
    done
done
#END
